<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/list_item_change_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Version" />
    <TextView
        android:id="@+id/list_item_change_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Type" />
    <TextView
        android:id="@+id/list_item_change_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Group" />
    <TextView
        android:id="@+id/list_item_change_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Author" />
</LinearLayout>